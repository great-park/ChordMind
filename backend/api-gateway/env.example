# API Gateway 환경 변수 설정

# 서버 설정
SERVER_PORT=8080

# Redis 설정 (Rate Limiting용)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# JWT 설정
JWT_SECRET=chordmind-jwt-secret-key-2024-very-long-and-secure
JWT_EXPIRATION=86400000

# 로깅 설정
LOGGING_LEVEL_GATEWAY=INFO
LOGGING_LEVEL_CHORDMIND=DEBUG
LOGGING_LEVEL_WEBFLUX=INFO

# 서비스 URL 설정
PRACTICE_SERVICE_URL=http://localhost:8082
USER_SERVICE_URL=http://localhost:8081
HARMONY_SERVICE_URL=http://localhost:8084
AI_SERVICE_URL=http://localhost:8088
FEEDBACK_SERVICE_URL=http://localhost:8085
GAME_SERVICE_URL=http://localhost:8086

# 보안 설정
SECURITY_ENABLED=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://chordmind.com

# Rate Limiting 설정
RATE_LIMIT_DEFAULT_REQUESTS_PER_SECOND=10
RATE_LIMIT_DEFAULT_BURST_CAPACITY=20
RATE_LIMIT_USER_SERVICE_REQUESTS_PER_SECOND=20
RATE_LIMIT_USER_SERVICE_BURST_CAPACITY=40
RATE_LIMIT_PRACTICE_SERVICE_REQUESTS_PER_SECOND=15
RATE_LIMIT_PRACTICE_SERVICE_BURST_CAPACITY=30

# Circuit Breaker 설정
CIRCUIT_BREAKER_SLIDING_WINDOW_SIZE=10
CIRCUIT_BREAKER_FAILURE_RATE_THRESHOLD=50
CIRCUIT_BREAKER_WAIT_DURATION_IN_OPEN_STATE=10000
CIRCUIT_BREAKER_PERMITTED_NUMBER_OF_CALLS_IN_HALF_OPEN_STATE=3

# 모니터링 설정
MONITORING_ENABLED=true
METRICS_ENABLED=true
TRACING_ENABLED=false
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Prometheus 설정
PROMETHEUS_ENABLED=true 